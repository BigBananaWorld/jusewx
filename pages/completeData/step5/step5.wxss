.container {
	display: flex;
	display: -webkit-flex; /* Safari */
	flex-direction: column;
	margin: 0;
	padding: 0;
	font-family: "PingFang-SC-Medium";
}

.big-text-box {
	margin: 71rpx 90rpx 0 90rpx;
	line-height: 60rpx;
	height: 57rpx;
}

.big-text {
	font-size: 60rpx;
 	color: #333333;
}

.mid-text-box {
	margin: 62rpx 55rpx 0 96rpx;
	line-height: 36rpx;
	height: 34rpx;
}

.mid-text {
	font-size: 36rpx;
 	color: #333333;
}

.sm-text-box {
	margin: 79rpx 90rpx 0 90rpx;
	height : 63rpx;
	line-height: 32rpx;
}

.sm-text {
	font-size:28rpx;
	color:#CCCCCC;
}

.img-box {
	display: flex;
	margin: 207rpx 90rpx 0 90rpx;
}

image {
