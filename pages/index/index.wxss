.chp_img {
  width: 175rpx;
  height: 196rpx;
  margin-left: 76rpx;
}

.title_bottom {
  margin-bottom: 59rpx;
  height: 67rpx;
  line-height: 66rpx;
  border-radius: 33rpx;
  box-shadow: 0 5rpx 10rpx #fed6cb;
  background: linear-gradient(to top left, #fd6e6a 20%, #ffc600 80%);
  font-size: 30rpx;
  color: rgb(255,255,255);
  margin-right: 200rpx;
  margin-top: 44rpx;
