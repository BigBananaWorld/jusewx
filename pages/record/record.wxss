/* pages/userCenter/userCenter.wxss */

page {
    background: linear-gradient(to top left, #FD6E6A 20%, #FFC600 80%);
}

@font-face {
    font-family: 'PingFang-Medium';
    src: url('https://xcx.zmelo.com/xcxzml/ttf/PingFang-Medium.ttf');
}

.container {
    height: 100%;
    margin: 0;
    padding: 0;
}

.backimg {
    position: absolute;
    /*z-index: -1;*/
    width: 100%;
    height: 401rpx;
}

/*
 * 排位定位
 */

.rank-box {
    position: relative;
    /*min-height: 800rpx;*/
    /*height: 1000rpx;*/
    top: 287rpx;
    margin: 0 30rpx;
    background-color: #FFFFFF;
    border-top-right-radius: 10rpx;
    border-top-left-radius: 10rpx;
}

.rank {
    width: 100%;
}

.rank-item {
    height: 81rpx;
    margin-bottom: 42rpx;
    width: 100%;
    display: flex;
    justify-content: space-between;
    font-size: 48rpx;
    flex-wrap: no-wrap;
}

.rank-item .left {
    display: flex;
    height: 81rpx;
    vertical-align: middle;
    padding-left: 41rpx;
}

.top {
	font-size: 60rpx;
	background: linear-gradient(to bottom,#EC6764 50%,#F2A86B 90%);
	color:transparent;
 	-webkit-background-clip: text;
}

.myTop {
	background: linear-gradient(to bottom,#EC6764 50%,#F2A86B 90%);
	color:transparent;
 	-webkit-background-clip: text;
}

.rank-item .left view:nth-child(1) {
    text-align: center;
    line-height: 81rpx;
    width: 60rpx;
}

.rank-item .left image:nth-child(2) {
  /*  width: 81rpx;
    height: 81rpx;*/
    margin-left: 28rpx;
    margin-right: 49rpx;
    border-radius: 50%;
	border:1rpx solid #EC6864;
}

.rank-item .left view:nth-child(3) {
    width: 180rpx;
    height: 80rpx;
    line-height: 81rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    font-size: 30rpx;
    color: #666666;
}

.rank-item .right {
    text-align: right;
    height: 80rpx;
    line-height: 81rpx;
    min-width: 60rpx; 
    color: #999999;
    font-size: 40;
    font-family: "DINCondensed-Light";
    padding-right: 60rpx;
}

.topNum {
    background: linear-gradient(to bottom,#EC6764 20%,#F2A86B 80%);
    color:transparent;
    -webkit-background-clip: text;
}

/*
 * 导航栏
 */

.title-box {
    font-family: "PingFang-Medium";
    display: flex;
    justify-content: center;
    margin-bottom:26rpx;
}

.title {
    padding:31rpx 100rpx 38rpx 100rpx;
    font-size: 34rpx;
    color: #999999;
    position: relative;
    /*font-weight:bold;*/
}

.title-box .on {
    color: #FF6666;
}
.title-box .on::after {
  content: "";
  width: 67rpx;
  height: 0;
  display: inline-block;
  border-bottom: 7rpx solid #FF6666;
  border-radius: 40rpx;
  position: absolute;
  bottom: 10rpx;
  left: 38%;
}

/*
 * 分割线
 */

.division {
    height: 2rpx;
    margin-right: auto;
    margin-left: auto;
    margin-top: 33rpx;
    margin-bottom: 29rpx;
    background-color: #E5E5E5;
}

image {
    width: 81rpx;
    height: 81rpx; 
}

.btn-box {
    position: fixed;
    bottom: 0;
    width: 100%;
}

.btn{
    height: 99rpx;
    line-height: 99rpx;
    font-size: 28rpx;
    text-align: center;
    background-color: #FD6E6A;
    color: #FFFFFF;
}
.botton-share{
    width: 100%;
    height: 100rpx;
    background-color: #ff5a5a;
    position: fixed;
    bottom: 0;
    line-height: 100rpx;
}
button{
    background-color: transparent;
}