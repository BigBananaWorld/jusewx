/* pages/record1/record1.wxss */
.record{
  position: fixed;
  height: 100%;
  width: 100%;
}

.padlr{
  padding: 0 50rpx;
}

.topbar{
  width: 100%;
  height: 90rpx;
  padding: 0 70rpx;
}
.topbar-items{
  height: 90rpx;
  line-height: 90rpx;
}
.h20{
  height: 20rpx;
}

.topbar-selected{
  color: #ff5a5a;
  border-bottom:5rpx solid #ff5a5a; 
}

.time{
  height: 90rpx;
  margin-bottom: 28rpx;

}

.add-weight{
  height: 130rpx;
}

.btn-sure{
  margin: 20rpx 28rpx 0;
  height: 90rpx;
  background-color: #ff5a5a;
  border-radius: 10rpx;
  line-height: 90rpx;
  text-align: center;
}

.rule{
  margin-top: 40rpx;
}
.rule image{
  width:28rpx;
  height: 28rpx;
  margin-left: 10rpx;
}
.bottom{
  width: 100%;
  text-align: center;
  position: absolute;
  bottom: 50rpx;
}

button{
  background-color: transparent;
}

.wx-service{
  position: fixed;
  bottom: 70rpx;
  right: 30rpx;
}
.wx-service button::after{
  border: none
}
.wx-service image{
  width:120rpx;
  height:120rpx;
}

.diet-record{
  position: relative;
  padding: 28rpx 40rpx 56rpx 28rpx;
}
.diet-record .num-tip{
  position: absolute;
  bottom: 28rpx;
  right: 50rpx;
}

.diet-text{
  width: 100%;
  height: 240rpx;
  

}
.phd-style{
  font-size: 28rpx;
  color: #b2b2b2;
}

/* 体围 */
.settings{
  padding-left: 53rpx;
  padding-right: 70rpx;
}
.settings-item{
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
}
.settings-item image{
  width: 50rpx;
  height: 50rpx;
  display: inline-block;
  vertical-align: middle;
}
.settings-item text{
  margin-left: 35rpx;
}

/* 模态框 */
.share-container{
  position: fixed;
  width: 100%;
  height: 100%;
  z-index: 999;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: #fff;
  overflow: auto;
}
.closeShare{
  position: absolute;
  right: 22rpx;
  top: 22rpx;
  z-index: 1000;
}
.closeShare image{
  width: 48rpx;
  height: 48rpx;
}
.modal-btn{
  width: 240rpx;
  height: 66rpx;
  border-radius: 33rpx;
  text-align: center;
  line-height: 66rpx;
  margin: 60rpx auto 0;
  
}
.share-btn{
  width: 100%;
  /* position: absolute;
  bottom: 30rpx; */
  padding: 0 40rpx;
  z-index: 1000;
  
}
.share-save{
  width: 316rpx;
  height: 88rpx;
  border-radius: 44rpx;
  background-color: #ff5a5a;
  text-align: center;
  line-height: 88rpx;
}
.share-save image{
  width: 46rpx;
  height: 46rpx;
}
.share-send{
  width: 316rpx;
  height: 88rpx;
  border-radius: 44rpx;
  background-color: #ffc600
}
.share-send-btn{
  text-align: center;
  line-height: 88rpx;
}
.share-send image{
  width: 41rpx;
  height: 41rpx;
}



